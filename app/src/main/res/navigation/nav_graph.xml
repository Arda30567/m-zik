<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.musicplayer.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_player"
            app:destination="@id/playerFragment" />

        <action
            android:id="@+id/action_home_to_library"
            app:destination="@id/libraryFragment" />

    </fragment>

    <!-- Library Fragment -->
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.musicplayer.ui.library.LibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_library">

        <action
            android:id="@+id/action_library_to_album_detail"
            app:destination="@id/albumDetailFragment" />

        <action
            android:id="@+id/action_library_to_artist_detail"
            app:destination="@id/artistDetailFragment" />

        <action
            android:id="@+id/action_library_to_player"
            app:destination="@id/playerFragment" />

    </fragment>

    <!-- Album Detail Fragment -->
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.musicplayer.ui.album.AlbumDetailFragment"
        android:label="Album"
        tools:layout="@layout/fragment_album_detail">

        <argument
            android:name="albumId"
            app:argType="long" />

        <action
            android:id="@+id/action_album_detail_to_player"
            app:destination="@id/playerFragment" />

    </fragment>

    <!-- Artist Detail Fragment -->
    <fragment
        android:id="@+id/artistDetailFragment"
        android:name="com.musicplayer.ui.artist.ArtistDetailFragment"
        android:label="Artist"
        tools:layout="@layout/fragment_artist_detail">

        <argument
            android:name="artistId"
            app:argType="long" />

        <action
            android:id="@+id/action_artist_detail_to_player"
            app:destination="@id/playerFragment" />

    </fragment>

    <!-- Playlists Fragment -->
    <fragment
        android:id="@+id/playlistsFragment"
        android:name="com.musicplayer.ui.playlist.PlaylistsFragment"
        android:label="Playlists"
        tools:layout="@layout/fragment_playlists">

        <action
            android:id="@+id/action_playlists_to_playlist_detail"
            app:destination="@id/playlistDetailFragment" />

        <action
            android:id="@+id/action_playlists_to_create_playlist"
            app:destination="@id/createPlaylistFragment" />

    </fragment>

    <!-- Playlist Detail Fragment -->
    <fragment
        android:id="@+id/playlistDetailFragment"
        android:name="com.musicplayer.ui.playlist.PlaylistDetailFragment"
        android:label="Playlist"
        tools:layout="@layout/fragment_playlist_detail">

        <argument
            android:name="playlistId"
            app:argType="long" />

        <action
            android:id="@+id/action_playlist_detail_to_player"
            app:destination="@id/playerFragment" />

    </fragment>

    <!-- Create Playlist Fragment -->
    <fragment
        android:id="@+id/createPlaylistFragment"
        android:name="com.musicplayer.ui.playlist.CreatePlaylistFragment"
        android:label="Create Playlist"
        tools:layout="@layout/fragment_create_playlist" />

    <!-- Search Fragment -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.musicplayer.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_search_to_player"
            app:destination="@id/playerFragment" />

    </fragment>

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.musicplayer.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- Player Fragment -->
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.musicplayer.ui.player.PlayerFragment"
        android:label="Now Playing"
        tools:layout="@layout/fragment_player"
        app:enterAnim="@anim/slide_up"
        app:exitAnim="@anim/slide_down"
        app:popEnterAnim="@anim/slide_up"
        app:popExitAnim="@anim/slide_down" />

</navigation>